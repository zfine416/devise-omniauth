
@import "bootstrap-sprockets";
@import "bootstrap";

*{
	margin: 0;
	padding: 0;
	border:0;
}

/*--------VARIABLES--------*/

/*-----COLORS-----*/
$white: #fff;
$grey: #ccc;
$dark_grey: #555;
$blue: #4f6fad;
$pink: #ee9cb4;


@media (max-width: 500px ), handheld and (orientation: landscape) {
	.navbar-default {
		background: #000;
		border: 1px solid #000;
	}
}

.navbar {
	margin-bottom: 0;
	background: #000;
}

.nav.navbar-nav.navbar-right li a {
   color: $white;
}

.navbar-default .navbar-brand {
	color: $white;
	&:hover {
		color: $white;
	}
}




